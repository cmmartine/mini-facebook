<nav class="nav-page"><%= render "shared/navigation-bar" %></nav>

<div class="devise-wrapper">
  <div class="devise-container">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, data: { turbo: false }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= image_tag user_avatar(current_user, 120), class: "nav-icon" %>
        <p>We use gravatar for your avatar, to change it, please follow this link:</p>
        <a href="https://en.gravatar.com/">Gravatar website</a>
      </div>

      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username", pattern: "^(?=.{2,50}$).*" %>
        <span class="error-message">Username must be between 2 and 50 characters</span>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", pattern: "[^@ \t\r\n]+@[^@ \t\r\n]+\.[^@ \t\r\n]+" %>
        <span class="error-message">Email must be in the form of: example@email.com</span>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", pattern: "^(?=.{6,100}$).*" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
        <span class="error-message">Password must be at least 6 characters long.</span>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Update" %>
      </div>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { turbo_confirm: "Are you sure?" }, method: :delete  %></p>

    <%= link_to "Back", :back %>
  </div>
</div>
